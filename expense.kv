        PaddingBoxLayout:
            size_hint_y: 2
    
            Label:
                id: message
                color: 0, 0, 0, 1
                font_size: 20
                text: "ファンクラブカードをかざしてください"
                
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 2

            Label:
                size_hint_x: 2
                text: ""

            BoxLayout:
                size_hint_x: 6

                Button:
                    id: execbtn
                    text: "実行"
                    font_size: 32
                    color: 1, 1, 1, 1
                    background_color:  (0, 0 ,1 ,1)
                    on_press: root.sendID()
                    disabled: True

            Label:
                size_hint_x: 2
                text: ""
